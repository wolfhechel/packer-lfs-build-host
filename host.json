{
  "variables": {
        "iso_url": "http://ftp.availo.se/archlinux/iso/2014.04.01/archlinux-2014.04.01-dual.iso",
        "iso_checksum": "b7d7d124bc4f82d1df55c17029def67dfa0e5e64",
        "name": "build-host",

        "ram": 1024,
        "cpus": 1,
        "sda_size": 10240,
        "sdb_size": 20480,

        "timezone": "UTC",
        "language": "en_US.UTF-8",
        "keymap": "sv-latin1",
        "build_user": "lfs",
        "build_dir": "/mnt/lfs",

        "_target_dir": "/mnt",
        "_ssh_pass": "root"
  },

  "builders": [
  {
      "name": "{{user `name`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "disk_size": "{{user `sda_size`}}",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "shutdown_command": "umount -r {{user `_target_dir`}}; poweroff",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}",
          "--memory",
          "{{user `ram`}}"
        ],
        [
          "createhd",
          "--filename", "output-{{user `name`}}/{{.Name}}-sdb.vdi",
          "--size", "{{user `sdb_size`}}"
        ],
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl", "SATA Controller",
          "--port", "3",
          "--type", "hdd",
          "--medium", "output-{{user `name`}}/{{.Name}}-sdb.vdi"
        ]
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `_ssh_pass`}}",
      "iso_urls": [
        "{{user `iso_url`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha1",
      "boot_wait": "5s",
      "boot_command": [
        "<enter>",
        "<wait10><wait5>",
        "systemctl start sshd<enter>",
        "usermod --password $(openssl passwd -crypt {{user `_ssh_pass`}}) root<enter>",
        "<wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "TARGET_DIR='{{user `_target_dir`}}'",
        "BUILD_DIR='{{user `build_dir`}}'"
      ],
      "scripts": [
        "provisioning/bootstrap.sh"
      ]
    },
    {
      "type": "shell",
      "remote_path": "/config.sh",
      "execute_command": "chmod +x {{ .Path }}; cp {{ .Path }} {{user `_target_dir`}}; {{ .Vars }} /usr/bin/arch-chroot {{user `_target_dir`}} {{ .Path }}; rm {{user `_target_dir`}}{{ .Path }}",
      "environment_vars": [
        "BUILD_DIR='{{user `build_dir`}}'",
        "TIMEZONE={{user `timezone`}}",
        "LANGUAGE={{user `language`}}",
        "KEYMAP={{user `keymap`}}",
        "BUILD_USER={{user `build_user`}}"
      ],
      "scripts": [
        "provisioning/system-configuration.sh"
      ]
    }
  ]
}
